            <tr>
                <th>Sexo</th>
                <td>{{ alumno.sexo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ alumno.email }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ alumno.telefono }}</td>
            </tr>
            <tr>
                <th>GradoId</th>
                <td>{{ alumno.gradoId }}</td>
            </tr>
        </tbody>
    </table>

